<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size"
        android:id="@+id/activity_new_note_appbarlayout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_size"
            android:id="@+id/activity_new_note_toolbar">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/activity_new_note_appbarlayout">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/new_note_edit_text"
        android:hint="@string/new_note_hint"
        android:autoLink="all"
        android:breakStrategy="high_quality"
        android:fontFamily="monospace"
        android:gravity="start"
        />
    </ScrollView>

</RelativeLayout>